generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Subscription {
  id           String   @id @default(cuid())
  email        String   @unique
  days         String[]
  subscribedAt DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
}
